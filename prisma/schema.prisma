generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

//models
model newsletter_model {
  createdDate  DateTime  @id @unique 

  // Columns for Upcoming Events
  upcomingEvents  String?

  // Columns for What's Up Right Now
  whatsUpNow      String?

  // Columns for Recommended Reads
  recommendedReads String?

  // Columns for Shoutouts
  shoutouts        String?

  // Columns for Subscribers
  subscribers      String[]
}


